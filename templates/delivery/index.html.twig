{% extends 'base.html.twig' %}

{% block title %}Delivery index{% endblock %}

{% block body %}
    <h1>Delivery index</h1>


    <div class="form-row align-items-end" >
        <div class="col">

        </div>

        <div class="col">
            <div class="form-group">
                <button type="submit" class="btn btn-success">Rechercher</button>
            </div>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Lang</th>
                <th>Attitude</th>
                <th>Price</th>
                <th>User</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for delivery in deliveries %}
            <tr>
                <td>{{ delivery.id }}</td>
                <td>{{ delivery.lang }}</td>
                <td>{{ delivery.attitude }}</td>
                <td>{{ delivery.price }}</td>
                <td>{{ delivery.commande.user.username }}</td>
                <td>
                    <a href="{{ path('app_delivery_show', {'id': delivery.id}) }}">show</a>
                    <a href="{{ path('app_delivery_edit', {'id': delivery.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_delivery_new') }}">Create new</a>
{% endblock %}
