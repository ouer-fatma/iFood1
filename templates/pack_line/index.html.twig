{% extends 'base.html.twig' %}

{% block title %}PackLine index{% endblock %}

{% block body %}
    <h1>PackLine index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Quantity</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pack_line in pack_lines %}
            <tr>
                <td>{{ pack_line.id }}</td>
                <td>{{ pack_line.quantity }}</td>
                <td>
                    <a href="{{ path('app_pack_line_show', {'id': pack_line.id}) }}">show</a>
                    <a href="{{ path('app_pack_line_edit', {'id': pack_line.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_pack_line_new') }}">Create new</a>
{% endblock %}
